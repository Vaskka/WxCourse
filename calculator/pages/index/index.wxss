/* ops border container */
.ops-container {
  /* height: 100%; */
  flex-direction: column;
  justify-content: space-around;
}

.row {

  height: 187.5rpx;

  display: flex;
  flex-direction: row;
  justify-content: space-around;

  background-color: #353535;
}

.col {
  height: 150rpx;
  width: 150rpx;
  background-color: rgb(166, 130, 97);
  border: 0;
  border-radius: 75px;

  /* box-shadow: 1px 1px 2px #999999; */
}

.col-op {
  background-color: rgb(193, 117, 85);
}

.col-func {
  background-color: rgb(145, 43, 65);
}

.border-content {
  display: block;
  text-align: center;

  line-height: 150rpx;
  font-size: 50rpx;
}