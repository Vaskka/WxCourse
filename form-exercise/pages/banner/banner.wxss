.title-container {
    width: 100%;
    height: 10vh;

    display: flex;
    flex-direction: column;
    justify-content: start;

}

.title-content {
    display: block;
    text-align: center;
}

.form-conntent-container {
    width: 100%;
    height: 80vh;
}

.sel-head {
    display: block;
    width: 80%;
    margin: 0 auto;
    border-bottom: 1px solid #000;
}

.group {
    width: 100%;
    display: flex;
    justify-content: start;
    flex-direction: column;
}

.group-item {
    margin: 20rpx 20rpx;
}

.picker {
    margin: 20rpx 75rpx;
}

.btn {
    width: 80%;
    margin-top: 20rpx;
}

.submit-btn {
    background-color: #66CCFF;
    color: azure;
}

.reset-btn {
    background-color: #CC3300;
